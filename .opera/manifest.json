{
    "name": "__MSG_extName__",
    "description": "__MSG_extDescr__",
    "version": "0.2.10",
    "manifest_version": 2,

    "developer": { "name": "Mykhailo Onikiienko",
                    "url": "http://onikienko.pp.ua" },

    "default_locale": "en",
    "icons": {
        "16": "img/ext_icons/16.png",
        "48": "img/ext_icons/48.png",
        "128": "img/ext_icons/128.png"
    },

    "browser_action": {
        "default_icon": {
            "19": "img/ext_icons/19.png",
            "38": "img/ext_icons/38.png"
        },
        "default_title": "__MSG_extName__",
        "default_popup": "popup.html"
    },

    "background": {
        "scripts": ["js/storage.js", "js/background.js"],
        "persistent": true
    },
    "options_page": "options.html",

    "permissions": [
        "storage",
        "tabs",
        "opera://favicon/"
    ]
}